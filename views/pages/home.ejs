<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/header") %>
    <style>
      @keyframes float {
        0% {
          transform: translateY(0);
        }

        50% {
          transform: translateY(-10px);
        }

        100% {
          transform: translateY(0);
        }
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(-20px);
        }

        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      body {
        background: linear-gradient(to right, #ff416c, #ff4b2b);
        color: white;
        font-family: 'Poppins', sans-serif;
        overflow-x: hidden;
      }

      .pokemon-card {
        position: relative;
        width: 180px;
        height: 250px;
        perspective: 1000px;
        transition: transform 0.3s ease-in-out;
      }

      .pokemon-card:hover {
        transform: scale(1.05);
      }

      .card-inner {
        width: 100%;
        height: 100%;
        position: absolute;
        transform-style: preserve-3d;
        transition: transform 0.6s;
      }

      .pokemon-card:hover .card-inner {
        transform: rotateY(180deg);
      }

      .card-front,
      .card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }

      .card-front {
        background: white;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 10px;
      }

      .card-back {
        background: #2b2b2b;
        color: white;
        transform: rotateY(180deg);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        font-weight: bold;
      }

      .glow {
        transition: box-shadow 0.3s ease-in-out;
      }

      .pokemon-card:hover .glow {
        box-shadow: 0 0 15px var(--color);
      }

      .pokeball {
        position: fixed;
        width: 50px;
        height: 50px;
        bottom: 30px;
        right: 30px;
        animation: float 2s infinite ease-in-out;
      }

      .typing {
        display: inline-block;
        overflow: hidden;
        border-right: 3px solid white;
        white-space: nowrap;
        animation: typing 2s steps(10) infinite alternate, blink 0.5s step-end infinite;
      }

      @keyframes typing {
        from {
          width: 0;
        }

        to {
          width: 100%;
        }
      }

      @keyframes blink {
        from {
          border-color: white;
        }

        to {
          border-color: transparent;
        }
      }
    </style>
</head>

<body>
  <div class="container mx-auto p-5">
    <h1 class="text-4xl font-bold text-center mb-6 text-white typing">Pok√©dex</h1>

    <!-- üîç Search Form -->
    <form action="/search" method="GET" class="flex justify-center mb-6">
      <input type="text" name="name" placeholder="Search Pok√©mon..."
        class="px-4 py-2 w-64 border rounded-l-lg focus:outline-none shadow-sm">
      <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded-r-lg shadow-sm hover:bg-yellow-600">
        Search
      </button>
    </form>

    <!-- Pok√©mon Deck -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6 justify-center">
    <% pokemonList.forEach(pokemon=> { %>
      <a href="/pokemon/<%= pokemon.name %>" class="pokemon-card glow">
        <div class="card-inner">
          <!-- Front Side -->
          <div class="card-front">
            <img src="<%= pokemon.image %>" alt="<%= pokemon.name %>" class="w-24 h-24 mx-auto">
            <p class="text-lg capitalize font-semibold mt-3 text-gray-700">
              <%= pokemon.name %>
            </p>
          </div>
    
          <!-- Back Side (Flips on Hover) -->
          <div class="card-back">
            Type: <%= pokemon.type %>
          </div>
        </div>
      </a>
      <% }); %>

    </div>
  </div>

  
</html>